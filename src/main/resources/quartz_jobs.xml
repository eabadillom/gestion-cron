<quartz xmlns="http://www.opensymphony.com/quartz/JobSchedulingData" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.opensymphony.com/quartz/JobSchedulingData job_scheduling_data_1_5.xsd ">
	<!--
	Ejemplo de expresión cron:
	0 0 8 ? * MON *
	┬ ┬ ┬ ┬ ┬ ┬   ┬
	│ │ │ │ │ │   │
	│ │ │ │ │ │   └─ Año (opcional, *)
	│ │ │ │ │ └─── Día de la semana (MON)
	│ │ │ │ └───── Mes (*)
	│ │ │ └─────── Día del mes (?)
	│ │ └───────── Hora (8)
	│ └─────────── Minuto (0)
	└───────────── Segundo (0)
	-->
    <job>
        <job-detail>
            <name>MAIL_INVENTARIO_0700_Job</name>
            <group>INVENTARIO</group>
            <description>Envio de inventario por e-mail 7:00am</description>
            <job-class>com.ferbo.cron.SendMailInventarioJob</job-class>
            <job-data-map allows-transient-data="false">
            	<entry>
					<key>numeroCliente</key>
					<value>12,119,121</value>
            	</entry>
            </job-data-map>
        </job-detail>
        <trigger>
            <cron>
                <name>MAIL_INVENTARIO_0700_Trigger</name>
                <group>INVENTARIO_TRIGGER</group>
                <job-name>MAIL_INVENTARIO_0700_Job</job-name>
                <job-group>INVENTARIO</job-group>
                <cron-expression>0 0 7 ? * *</cron-expression>
            </cron>
        </trigger>
    </job>
